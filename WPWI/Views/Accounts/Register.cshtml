@model WPWI.Models.ViewModels.AppUserVM

<section>
    <div class="theForm">
        <form class="form" method="post" asp-action="Register" asp-controller="Accounts">
            <div asp-validation-summary="All"></div>
            <div class="form-control">
                <label asp-for="@Model.FirstName"></label>
                <input asp-for="@Model.FirstName" />
            </div>

            <div class="form-control">
                <label asp-for="@Model.LastName"></label>
                <input asp-for="@Model.LastName" />
            </div>
            <div class="form-control">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" />
            </div>
            <div class="form-control">
                <label asp-for="@Model.Password"></label>
                <input asp-for="@Model.Password" />
            </div>
            <div class="form-control">
                <label asp-for="@Model.ConfirmPassword"></label>
                <input asp-for="@Model.ConfirmPassword" />
            </div>
            <div class="form-control">
                <button type="submit" class="btn btn-outline-primary">Submit</button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
  @{
      await Html.RenderPartialAsync("_ValidationScriptsPartial");
   }
 }